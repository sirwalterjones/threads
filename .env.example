# Database Configuration
# For local development with PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=threads_intel
DB_USER=postgres
DB_PASSWORD=your_password

# For production on Vercel (use SQLite or external database)
DATABASE_URL=your_database_url_here

# WordPress API
WORDPRESS_API_URL=https://cmansrms.us/wp-json/wp/v2
WORDPRESS_USERNAME=your_wp_username
WORDPRESS_PASSWORD=your_wp_password

# JWT Secret (REQUIRED - generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Data Retention (in days)
DEFAULT_RETENTION_DAYS=365

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# VERCEL DEPLOYMENT NOTES:
# Set these environment variables in your Vercel dashboard:
# - JWT_SECRET (required)
# - WORDPRESS_API_URL
# - WORDPRESS_USERNAME
# - WORDPRESS_PASSWORD
# - NODE_ENV=production
# - DATABASE_URL (if using external database)
# 
# The app will use SQLite by default for Vercel deployment