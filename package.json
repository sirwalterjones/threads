{
  "name": "threads-intel",
  "version": "1.0.0",
  "description": "Modern intelligence data management system",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "JWT_SECRET=dev_local_secret_change_me PORT=5050 nodemon server/index.js",
    "client:dev": "cd client && PORT=3001 npm start",
    "build": "cd client && npm install --legacy-peer-deps && npm run build",
    "vercel-build": "cd client && npm install --legacy-peer-deps && DISABLE_ESLINT_PLUGIN=true npm run build",
    "start": "node server/index.js",
    "install:all": "npm install --legacy-peer-deps && cd client && npm install --legacy-peer-deps"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "intelligence",
    "data-management",
    "wordpress",
    "api"
  ],
  "author": "Threads Intel Team",
  "license": "ISC"
}
